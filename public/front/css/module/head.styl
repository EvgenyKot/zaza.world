/*!****** HEADER ******/
.header
    overflow: hidden;
    height: 90px
    width: 100%
    background: #fff
    z-index: 10
    position: fixed
    box-shadow: 0px 5px 100px -30px #000000
    top:0
@media screen and (max-width: 768px)
    .header
        height: auto;
        position:relative;
@media screen and (max-width: 992px) and (min-width: 767px)
    .header
        height: 120px;

/*!****** m-logo ******/
.m-logo
    text-align: center;
    margin-top: 15px;
    &__image
        width: 100%;
        min-width: 130px;
        max-width: 60%;
        height: auto;
    &__slogan
        margin: 5px 0 0 0;
        font-size: 1.4em;
        font-weight: 700;
@media screen and (max-width: 768px)
    .m-logo
        margin-top: 5px;
        &__image
            width: 100%;
        &__slogan
            font-size: 12px;
@media screen and (max-width: 992px) and (min-width: 767px)
    .m-logo
        margin-top: 8px;
        padding-left: 10px;
        padding-right: 15px;
        &__image
            width: 100%;
            min-width: 0px;
            max-width: 100%;
        &__slogan
            font-size: 12px;

/*!****** location ******/
.m-location
    text-align: left;
    margin-top: 28px;
    &__link
        display: block;
        color:inherit;
    &__image
        height: 30px;
        border-radius: 2px;
        display: block;
        float: left;
    &__name
        font-size: 1.5em;
        border-bottom: 1px dotted;
        display: block;
        float: left;
        margin-left: 15px;
@media screen and (max-width: 768px)
    .m-location
        margin-top: 28px;
        &__image
            height: 30px;
        &__name
            font-size: 1.5em;
            margin-left: 15px;

@media screen and (max-width: 992px) and (min-width: 767px)
    .m-location
        margin-top: 28px;
        &__image
            height: 30px;
        &__name
            font-size: 1.5em;
            margin-left: 15px;

/*!****** weather ******/
.m-weather
    text-align: left;
    margin-top: 20px;
    &__image
        height: 46px;
        display: block;
        float: left;
    &__value
        font-size: 2.5em;
        display: block;
        float: left;
        margin-left: 15px;
        color: #4f6a71;
@media screen and (max-width: 768px)
    .m-weather
        margin-top: 20px;
        &__image
            height: 27px;
        &__value
            font-size: 20px;
            margin-left: 5px;

@media screen and (max-width: 992px) and (min-width: 767px)
    .m-weather
        margin-top: 20px;
        &__image
            height: 27px;
        &__value
            font-size: 20px;
            margin-left: 5px;

/*!****** counter ******/
.m-counter
    margin-top: 18px;
    text-align: center;
    &__digits
        margin-right: 5px;
        font-size: 2.5em;
        display: inline-block;
    &__digit
        margin-right: 5px;
        float: left;
        background: #15499f;
        color: #fff;
        padding: 0 3px;
        border-radius: 6px;
        line-height: 1.2;
        width: 20px;
        text-align: center;
    &__name
        color: color-green;
        font-size: 1.5em;
        line-height: 2;
        display: inline-block;
        vertical-align: middle;
        margin-top: -1.7em;

/*!****** header-buttons ******/
.m-head-button
    margin-top: 18px;
    text-align: right;
    & .add-advert
        button-template(#8bc34a);
        display: block;
        float: right;
        &__spec
            font-size: 1.2em;
            position: relative;
            top: 2px;
            right: 5px;
    & .login
        button-template(#d41f26)
        display: block;
        float: right;
        &__spec
            font-size: 1.2em;
            position: relative;
            top: 2px;
            right: 5px;
    & .select-lang
        display: block;
        float: right;
        border: 0;
        color: #15499f;
        font-size: 1.5em;
        margin-left: 15px;

/*!****** head-profile ****/
.m-head-profile
    width: 40px;
    float: right;
    overflow: hidden;
    position: relative;
    top: -2px;
    &__cirlce
        width: 40px;
        height: 40px;
        overflow: hidden;
        border-radius: 50%;
        text-align: center;
        border: 1px solid #d41f26;
    &__image
        width: auto;
        height: 100%;
        max-height: 40px;
