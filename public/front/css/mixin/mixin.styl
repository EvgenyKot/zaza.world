    margin: 15px 0;
    box-shadow: 11px 12px 17px -9px rgba(112,108,112,1);
    & img
        height: 25px;
        margin-bottom: 2px;
        vertical-align: middle;
        float: left;
        margin-left: 27px;
    &:hover, &.active
