/*!******** GENERAL *********/
*
    outline: 0;

@font-face
    font-family OpenSansRegular
    font-style normal
    src url(../fonts/2211.ttf)

body
    font-family:  'OpenSansRegular', sans-serif;
    font-size: 12px;
    color: color-text;
    vendor('box-sizing', border-box);
    background: #fff;

p
    margin: 0px;

h1 h2 h3 h4 h5 h6
    margin-top: 0
    margin-bottom: 2em
    font-weight: 300

h1
    font-size: 1.9em
h2
    font-size: 1.8em
h3
    font-size: 1.7em
h4
    font-size: 1.6em
h5
    font-size: 1.5em
h6
    font-size: 1.4em

a
    text-decoration: none
    &:hover
        transition: all 0.4s ease

div
    box-sizing: border-box;
